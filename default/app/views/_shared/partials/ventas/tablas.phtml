        'background-color': '#f8bbd0',  // color de fondo rosita
        'color': '#c2185b'               // color del texto rosado oscuro
    });

    // Estilo para los encabezados
    $('#myTable thead').css({
        'background-color': '#e1bee7',  // color de fondo de encabezados rosita
        'color': '#880e4f'               // color del texto en encabezados rosado intenso
    });
</script>