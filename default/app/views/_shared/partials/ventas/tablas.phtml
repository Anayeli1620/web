
<!-- Tabla de productos seleccionados -->
<div class="row">

    <!-- Formulario de selección de producto -->
    <div class="col-md-4 mb-3">
        <h4>Seleccionar Producto</h4>
        <form method="post" class="form-inline">
            <div class="form-group">
                <label for="producto_id" class="mr-2">Producto</label>
                <select name="producto_id" class="form-control mr-2">
                    <option value="1">Producto 1</option>
                    <option value="8">Producto 8</option>
                    <option value="99">Producto 99</option>
                </select>
            </div>
            <button class="btn btn-success" type="submit">Seleccionar</button>
        </form>
    </div>
</div>
<script>

    // Aplica el estilo rosita a la tabla después de la inicialización
